{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict" : true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "types": ["typePatches"],
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
